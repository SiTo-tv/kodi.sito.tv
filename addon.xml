<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="kodi.sito.tv" name="SiTo" version="1.3.3" provider-name="SiTo.tv">
    <requires>
        <!-- At least Kodi v13 is needed for android intents functionality-->
        <import addon="xbmc.addon" version="13.0.0"/>
        <import addon="xbmc.python" version="2.14.0"/>
    </requires>
    <extension point="xbmc.python.pluginsource" library="addon.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <news>
            [feature] Settings
            [feature] Recently viewed
            [feature] Kodi Favorites support
            [feature] Lookup media by alphabet
            [feature] Choose torrent variant for movie
            [feature] Collections support
            [feature] Torrent files are used instead of raw magnet links, when available
        </news>
        <assets>
            <icon>icon.png</icon>
            <fanart>fanart.jpg</fanart>
        </assets>
        <platform>all</platform>
        <language>en</language>
        <summary lang="en">SiTo Add-On - search and download movies from torrents</summary>
        <description lang="en">Download and watch favorite movies and TV-shows from torrents</description>
        <website>http://sito.tv/</website>
        <email>support at sito dot tv</email>
        <license>GNU GENERAL PUBLIC LICENSE. Version 2, June 1991</license>
    </extension>
    <extension point="xbmc.addon.repository" name="SiTo Add-On Repository">
        <info compressed="true">http://sito.tv/addon/kodi-repo/addons.xml</info>
        <checksum>http://sito.tv/addon/kodi-repo/addons.xml.md5</checksum>
        <datadir zip="true">http://sito.tv/addon/kodi-repo/data/</datadir>
    </extension>
</addon>
